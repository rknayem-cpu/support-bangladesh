<%- include('partials/header') %>



<div class="w-full h-screen flex justify-center items-center">

<div class="w-1/2 h-1/2 flex flex-col items-center justify-center relative bottom-18">

<form action="/update-password" method="post" id="form">

<label for="email" class="block text-sm font-medium text-gray-700 mb-2 flex items-center">
    Set your new password
</label>
<input type="text" name="password" id="password" placeholder="Enter your new password" class="w-full border border-gray-300 rounded-md px-3 py-2 mb-4 focus:outline-none focus:ring-2 focus:ring-blue-500" required>
<input type="text" name="email" id="email" hidden>
<button onclick="submit()" id="button" class="bg-blue-500 cursor-pointer hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">Submit</button>

</form>



</div>

</div>


<script>



let form = document.getElementById('form')
let  email = localStorage.getItem('email')
let evalue = document.getElementById('email')
let password = document.getElementById('password')
evalue.value = email

function submit(){
  if(!password.value == ''){
      alert('Please enter password')
  }else{
      form.submit()
  }
}



</script>


