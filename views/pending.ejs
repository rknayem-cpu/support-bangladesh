<%- include('partials/header') %>
<% 
      // Filter posts where show property is false
      const pendingPosts = posts.filter(post => post.show === false);
    %>
<div class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100 py-8 px-4">
  <div class="max-w-6xl mx-auto">
    <!-- Header Section -->
    <div class="mb-8 flex flex-col md:flex-row md:items-center md:justify-center">
      <div>
        <h1 class="text-3xl font-bold text-gray-800 mb-2 text-ceter w-full">পেন্ডিং পোস্ট ম্যানেজমেন্ট</h1>

       </div>
      
    </div>

    <!-- Filter Section -->
    <div class="bg-white p-4 rounded-lg shadow-md mb-6">
      <div class="flex items-center">
        <span class="bg-yellow-100 text-yellow-800 px-3 py-1 rounded-full text-sm font-medium mr-3">
          ফিল্টার করা
        </span>
        <p class="text-gray-700">অপ্রকাশিত পোস্ট দেখানো হচ্ছে (<%- pendingPosts.length %> টি পােস্ট)<p>
      </div>
    </div>

    <!-- Posts Grid -->
    
    
    <% if (pendingPosts && pendingPosts.length > 0) { %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% pendingPosts.forEach(post => { %>
          <div class="bg-white rounded-xl shadow-md overflow-hidden border-l-4 border-yellow-500">
            <div class="p-5">
              <div class="flex justify-between items-start mb-4">
                <div>
                  <h3 class="text-xl font-bold text-gray-800"><%- post.title %></h3>
                  <span class="inline-block bg-yellow-100 text-yellow-800 text-xs px-2 py-1 rounded-full mt-1">
                    পেন্ডিং
                  </span>
                </div>
               
              </div>
              <div class="text-gray-600  line-clamp-3 mb-4 relative"><%- post.content %></div>
              <div class="flex items-center justify-between text-sm text-gray-500">
                <div class="flex items-center">
                  <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  <%- new Date(post.createdAt || Date.now()).toLocaleDateString() %>
                </div>
                <div class="flex items-center">
                  <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                  </svg>
                  <%= post.views || 0 %>
                </div>
              </div>
            </div>
            
            <!-- Action Buttons -->
            <div class="bg-gray-50 px-5 py-3 flex justify-between">
              <a href="/approve-post/<%= post._id %>">
                <button type="submit" class="flex items-center px-3 py-1 bg-green-500 text-white rounded-md text-sm hover:bg-green-600 transition-colors duration-300">
                  <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  অ্যাপ্রুভ করুন
                </button>
              </a>
              <a href="/admindl/<%= post._id %>" class="flex items-center px-3 py-1 bg-red-500 text-white rounded-md text-sm hover:bg-red-600 transition-colors duration-300">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                </svg>
                ডিলিট করুন
              </a>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <!-- Empty State -->
      <div class="bg-white rounded-xl shadow-md p-8 text-center">
        <svg class="w-16 h-16 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
        <h3 class="text-xl font-semibold text-gray-700 mb-2">কোনো পেন্ডিং পোস্ট নেই</h3>
        
      </div>
    <% } %>
  </div>
</div>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>

<%- include('partials/footer') %>