<%- include('partials/header') %>

<%
  // Filter posts where show property is false
  const pendingPosts = posts.filter(post => post.show === false);
%>

<div class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100 py-8 px-4">
  <div class="max-w-6xl mx-auto">
    
    <!-- Header Section -->
    <div class="mb-8 flex flex-col md:flex-row md:items-center md:justify-center">
      <h1 class="text-3xl font-bold text-gray-800 mb-2 text-center w-full">
        পেন্ডিং পোস্ট ম্যানেজমেন্ট
      </h1>
    </div>

    <!-- Filter Section -->
    <div class="bg-white p-4 rounded-lg shadow-md mb-6">
      <div class="flex items-center">
        <span class="bg-yellow-100 text-yellow-800 px-3 py-1 rounded-full text-sm font-medium mr-3">
          ফিল্টার করা
        </span>
        <p class="text-gray-700">অপ্রকাশিত পোস্ট দেখানো হচ্ছে (<%- pendingPosts.length %> টি পোস্ট)</p>
      </div>
    </div>

    <!-- Posts Grid -->
    <% if (pendingPosts.length > 0) { %>
      <div class="w-full min-h-screen grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
        <% pendingPosts.forEach(post => { 
          const iframeMatch = post.content.match(/src="([^"]+)"/);
          const iframeSrc = iframeMatch ? iframeMatch[1] : '';
        %>
          <div class="bg-white rounded-xl shadow-2xl 
          overflow-hidden hover:shadow-xl border-l border-green-500 md:h-82 h-[76vh] ">
            <div class="p-5">
              
              <!-- Post Header -->
              <div class="flex justify-between items-start mb-4">
                <a href="/post/<%= post._id %>" class="cursor-pointer">
                  <h3 class="text-xl font-bold text-gray-800 truncate">
                    <%- post.title %>
                  </h3>
                </a>
                <a href="/postdl/<%= post._id %>" class="text-gray-400 hover:text-red-500 transition duration-300 ml-2">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16">
                    </path>
                  </svg>
                </a>
              </div>

              <!-- Post Content -->
              <div class="relative pb-[56.25%] mb-4">
                <div class="absolute top-0 left-0 w-full h-full">
                  <%- post.content %>
                </div>
              </div>

              <!-- Action Buttons -->
              <div class="bg-gray-50 px-5 py-3 flex justify-between">
                <a href="/approve-post/<%= post._id %>">
                  <button type="button"
                    class="flex items-center px-3 py-1 bg-green-500 text-white rounded-md text-sm hover:bg-green-600 transition duration-300">
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M5 13l4 4L19 7" />
                    </svg>
                    অ্যাপ্রুভ করুন
                  </button>
                </a>
                <a href="/admindl/<%= post._id %>">
                  <button type="button"
                    class="flex items-center px-3 py-1 bg-red-500 text-white rounded-md text-sm hover:bg-red-600 transition duration-300">
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                    </svg>
                    ডিলিট করুন
                  </button>
                </a>
              </div>

            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <div class="text-center py-10">
        <p class="text-gray-600 text-lg">কোনো পেন্ডিং পোস্ট পাওয়া যায়নি।</p>
      </div>
    <% } %>

  </div>
</div>

<!-- Custom Styles -->
<style>
  iframe {
    width: 100% !important;
    height: 100% !important;
    border: 0;
    display: block;
    object-fit: contain;
  }

  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>

<%- include('partials/footer') %>
