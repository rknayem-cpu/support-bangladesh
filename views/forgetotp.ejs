<%- include('partials/header') %>



<div class="w-full h-screen flex justify-center items-center">

<div class="w-1/2 h-1/2 flex flex-col items-center justify-center relative bottom-18">

<form action="/setpassword" method="post" id="form">

<label for="email" class="block text-sm font-medium text-gray-700 mb-2 flex items-center">
    Enter the otp we send to <span id="etext" class="relative left-3 text-blue-500"></span>
</label>
 <% if(err){ %>
         <p class="text-red-500"><%= err %></p>
        <% } %>
<input required type="text" name="otp" id="otp" placeholder="Enter OTP" class="w-full border border-gray-300 rounded-md px-3 py-2 mb-4 focus:outline-none focus:ring-2 focus:ring-blue-500" required>

<button onclick="submit()" id="button" class="bg-blue-500 cursor-pointer hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">Submit</button>

</form>



</div>

</div>


<script>



let form = document.getElementById('form')
let  email = localStorage.getItem('email')
let etext = document.getElementById('etext')
etext.innerHTML = email

function submit(){
  
    form.submit()
}



</script>


