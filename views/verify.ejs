<%- include('partials/header') %>
<div class="w-full h-screen flex justify-center items-center">
<div class="bg-white shadow-lg rounded-xl p-8 max-w-md w-full">
    <h2 class="text-2xl font-bold text-center text-purple-600 mb-6">Verify Your Email</h2>
    <p class="text-gray-600 text-center mb-4">
      Enter the 6-digit code sent to your email.
    </p>

    <form action="/verify" method="POST" class="space-y-4">
      <input type="text" name="code" maxlength="6" required
             placeholder="Enter code"
             class="w-full px-4 py-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 text-center text-xl tracking-widest">

      <button type="submit"
              class="w-full py-3 bg-purple-600 text-white font-semibold rounded-lg shadow-md hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 transition duration-300 transform hover:scale-105">
        Verify Now
      </button>
    </form>

    <p class="text-sm text-gray-500 text-center mt-4">
      Didn't receive the code? 
      <a href="/resend-code" class="text-purple-600 font-medium hover:underline">Resend</a>
    </p>
  </div>
  </div>
<%- include('partials/footer') %>